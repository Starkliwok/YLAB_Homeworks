<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="007-create-coworking-user-audit-result-table" author="Denis" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="user_audit_result_id_seq" schemaName="coworking"/>
                <tableExists tableName="user_audit_result" schemaName="coworking"/>
            </not>
        </preConditions>

        <createSequence sequenceName="user_audit_result_id_seq" schemaName="coworking"/>

        <createTable tableName="user_audit_result" schemaName="coworking">
            <column name="id" type="INT" defaultValueComputed="nextval('coworking.user_audit_result_id_seq')">
                <constraints primaryKey="true"/>
            </column>

            <column name="result" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>